@model DATAMODEL.VENDOR_BRANCH

@{   var Banks = BusinessEntities.DropDownBO.DropDownBO.AllBanks();
    var CashVendorBranches = BusinessEntities.DropDownBO.DropDownBO.AllVendor_Branches().ToList();
}


@if (@Model.PYMENT_TYPE == 1)
{
    using (Html.BeginForm("BalanceTransfer", "Bank", FormMethod.Post))
               {
    <div class="row">
        <div class="col-lg-12 table-responsive">
            <table class="table table-bordered table-hover table-striped">
              
                    <thead>
                        <tr>
                            <th>
                                From:
                            </th>
                            <td>
                                @Model.VBNAME @Model.ADDRESS
                                <input name="FromVBID" value="@Model.VENDOR_BRANCH_ID" type="hidden" />
                            </td>
                            <th>
                                To:
                            </th>
                            <td>
                                @Html.DropDownList("TOVBID", CashVendorBranches.Select(m => new SelectListItem { Text = m.VBNAME + " " + m.ADDRESS, Value = m.VENDOR_BRANCH_ID.ToString() }), "--Select Vendor--"
                                          , new { @class = "span2 form-control", @required = true, id = "TOVB_ID", style = "background-color:#CCFFCC;" })
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td> Amount:</td>
                            <td>
                                @ViewBag.RAmont
                                <input type="hidden" class="form-control" style="background-color:#CCFFCC;" name="Amount" value="@ViewBag.RAmont" />
                        </td>

                        <td> Confirm transfer:</td>
                        <td><input type="submit" value="Transfer" class="btn btn-success" /></td>
                    </tr>
                </tbody>
              
            </table>
        </div>
    </div>
               }
}
else if (@Model.PYMENT_TYPE == 2)
{
    using (Html.BeginForm("BalanceTransfer", "Bank", FormMethod.Post))
            {
    <div class="row">
        <div class="col-lg-12 table-responsive">
            <table class="table table-bordered table-hover table-striped">
           
                    <thead>
                        <tr>
                            <th>
                                From:
                            </th>
                            <td>
                                @Model.VBNAME @Model.ADDRESS
