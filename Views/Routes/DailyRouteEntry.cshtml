@model IEnumerable<DATAMODEL.CUSTOM_MODEL.VENDORCM>
@{
    ViewBag.Title = "DailyRouteEntry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h4>(Route: @ViewBag.RouteHead.RouteName) (Driver:  @ViewBag.RouteHead.DriverName) (Vehicle: @ViewBag.RouteHead.VehicleNo) (Date:  @ViewBag.RouteHead.Entry_Date)</h4>

<div class="row">
    <div class="col-lg-12 table-responsive">
        @for (int i = 0; i < 4; i++)
        {
        <input type="hidden" name="St_Ranges" value="@ViewBag.Iss_sr[i]" /> 
        }
        <table class="table table-striped table-bordered table-hover" >
            @{int rowNo = 0;}
            <thead>
                <tr >
                    
                    <th style="text-align:right">
                        وزن
                    </th>
                    <th style="text-align:right">
                        # پرچی
                    </th>
                    <th style="text-align:right">
                       Contact #
                    </th>
                    <th style="text-align:right" >Remarks</th>
                    <th style="text-align:right">
                        پتہ
                    </th>

                    <th style="text-align:right">
                        نام
                    </th>
                    <th style="text-align:right">
                        Sr No.
                    </th>

                </tr>
            </thead>
            <tbody>
          @using (Html.BeginForm("AddRouteEntries", "Routes", FormMethod.Post))
          {

            


              foreach (var item in Model)
              {
                    <tr style="text-align:right">
                        <td>
                            <input type="text" required="required" name="V_Weight" id="id-@item.VENDOR_ID" />
                        </td>
                        <td>
                            <input type="text" name="slipno" id="slip-@item.V_BRANCH_ID" />
                        </td>
                        <td>
                            @item.PHONE_NO
                            <input type="hidden" name="PHONE_NO">
                        </td>
                        <td>
                            <input type="text" name="Remarks" />
                        </td>
                        <td>
                            @item.ADDRESS
                            <input type="hidden" name="ADDRESS">
                        </td>
                        <td>
                            @item.V_NAME
                            <input type="hidden" name="V_name">
                        </td>
                        <td>
                            @{rowNo++;}@rowNo
                            <input type="hidden" name="V_BranchID"value="@item.V_BRANCH_ID">
                        </td>
                    </tr>
                  }

                <tr style="text-align:right">
                    <td>
                        
                       

                        <input type="text" required="required" name="machine_weight" />
                        <input type="hidden" value="@ViewBag.DateEntry" name="DateEntry" />
                        <input type="hidden" value="@ViewBag.Driver_ID" name="Driver_ID" />
                        <input type="hidden" value="@ViewBag.Route_ID" id="Route_ID" name="Route_ID" />
                        <input type="hidden" value="@ViewBag.vehicle_NO" name="Vehicle_ID" /> 
                        <input type="hidden" value="@ViewBag.ISSueID1" id="ISSueeSrID1" name="issueID1" />
                        <input type="hidden" value="@ViewBag.ISSueID2" id="ISSueeSrID2" name="issueID2" />
                     </td>
                    <td>
                        کنڈا وزن
                    </td>

                </tr>
                <tr style="text-align:right">
                    <td>
                        <input type="submit" id="add_btn" value="Add Entries" disabled="disabled" />
                    </td>
                    

                </tr>
          }
            </tbody>
        </table>
    </div>
</div>