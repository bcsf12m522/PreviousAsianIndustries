@model IEnumerable<DATAMODEL.VENDOR_ROUTE_ENTRY>

@{
    ViewBag.Title = "DetailRouteEntry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DetailRouteEntry</h2>

<div class="row">
    <div class="col-lg-12 table-responsive">
        <table class="table table-striped table-bordered table-hover">
            @{int rowNo = 0;}
            <thead>
                <tr>
                    <th style="text-align:right">
                        وزن
                    </th>
                    <th style="text-align:right">
                        # پرچی
                    </th>
                    <th style="text-align:right">
                        Contact #
                    </th>
                    <th style="text-align:right">
                        پتہ
                    </th>

                    <th style="text-align:right">
                        نام
                    </th>
                    <th style="text-align:right">
                        Sr No.
                    </th>

                </tr>
            </thead>
            <tbody>
              
                   @foreach (var item in Model)
                    {
                        <tr style="text-align:right">
                            <td>
                               @item.V_WEIGHT
                            </td>
                            <td>
                               @item.SLIP_NO
                            </td>
                            <td>
                                @item.VENDOR_BRANCH.PHONE_NO
                               
                            </td>
                            <td>
                                @item.VENDOR_BRANCH.ADDRESS
                                
                            </td>
                            <td>
                                @item.VENDOR_BRANCH.VBNAME
                                
                            </td>
                            <td>
                                @{rowNo++;}@rowNo
                                <input type="hidden" name="V_BranchID" value="@item.V_BRANCH_ID">
                            </td>
                        </tr>
                    }

                    <tr style="text-align:right">
                        <td>
                            @Model.FirstOrDefault().ROUTE_ENTREES.Machine_W
                            <input type="hidden" value="@ViewBag.Route_ID" name="Route_ID" />
                            <input type="hidden" value="@ViewBag.vehicle_NO " name="vehicle_id" />
                            <input type="hidden" value="@ViewBag.issueID" name="issueID" />
                        </td>
                        <td>
                            کنڈا وزن
                        </td>

                    </tr>
                    <tr style="text-align:right">
                    <td>
                        @Model.FirstOrDefault().ROUTE_ENTREES.TOTAL_W
                        <input type="hidden" value="@ViewBag.Route_ID" name="Route_ID" />
                        <input type="hidden" value="@ViewBag.vehicle_NO " name="vehicle_id" />
                        <input type="hidden" value="@ViewBag.issueID" name="issueID" />
                    </td>
                    <td>
                        ٹوٹل وزن
                    </td>

                    </tr>
                    <tr style="text-align:right">
                        <td>
                           @{var Diffrence = @Model.FirstOrDefault().ROUTE_ENTREES.TOTAL_W- @Model.FirstOrDefault().ROUTE_ENTREES.Machine_W;} @Diffrence
                            <input type="hidden" value="@ViewBag.Route_ID" name="Route_ID" />
                            <input type="hidden" value="@ViewBag.vehicle_NO " name="vehicle_id" />
                            <input type="hidden" value="@ViewBag.issueID" name="issueID" />
                        </td>
                        <td>
                            فرق
                        </td>

                    </tr>
               
                    <tr style="text-align:right">
                        <td>
                            @if ((bool)AsiaIndustries.SessionManagement.SessionHelper.UserSession.EDIT_OPTION)
                            {
                             @Html.ActionLink("Edit Entries", "EditVendorEntry", new { RouteEntryID = @Model.FirstOrDefault().ROUTE_ENTREES.ID }, new {@class="btn-sm btn-success" })
                            }
                            @if ((bool)AsiaIndustries.SessionManagement.SessionHelper.UserSession.EDIT_OPTION)
                            { 
                             @Html.ActionLink("Verify Entries", "OkVendorEntries", new { RouteEntryID = @Model.FirstOrDefault().R_ENTRY_ID }, new { @class = "btn-sm btn-primary" })
                            }
                        </td>
                    </tr>
               
                
                
            </tbody>
        </table>
    </div>
</div>