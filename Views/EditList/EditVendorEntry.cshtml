@model IEnumerable<DATAMODEL.VENDOR_ROUTE_ENTRY>

@{
    ViewBag.Title = "EditVendorEntry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DailyRouteEntry</h2>
<h2> @ViewBag.vehicle_NO</h2>


<div class="row">
    <div class="col-lg-12 table-responsive">
        <table class="table table-striped table-bordered table-hover">
            @{int rowNo = 0;}
            <thead>
                <tr>
                    <th style="text-align:right">
                        وزن
                    </th>
                    <th style="text-align:right">
                        # پرچی
                    </th>
                    <th style="text-align:right">
                        Contact #
                    </th>
                    <th style="text-align:right">
                        پتہ
                    </th>

                    <th style="text-align:right">
                        نام
                    </th>
                    <th style="text-align:right">
                        Sr No.
                    </th>

                </tr>
            </thead>
            <tbody>
                @using (Html.BeginForm("EditRouteEntries", "EditList", FormMethod.Post))
                {
                    foreach (var item in Model)
                    {
                        <tr style="text-align:right">
                            <td>
                                <input type="text" required="required" name="V_Weight" value="@item.V_WEIGHT" id="id-@item.V_BRANCH_ID" />
                            </td>
                            <td>
                              @* @item.SLIP_NO *@<input type="text" value="@item.SLIP_NO" name="slipnoE"  id="123-@item.V_BRANCH_ID" />
                            </td>
                            <td>
                                @item.VENDOR_BRANCH.PHONE_NO
                                <input type="hidden" name="PHONE_NO">
                            </td>
                            <td>
                                @item.VENDOR_BRANCH.ADDRESS
                                <input type="hidden" name="ADDRESS">
                            </td>
                            <td>
                                @item.VENDOR_BRANCH.VBNAME
                                <input type="hidden" name="V_name">
                            </td>
                            <td>
                                @{rowNo++;}@rowNo
                                <input type="hidden" name="V_BranchID" value="@item.V_BRANCH_ID">
                                <input type="hidden" name="R_ENTRY_V_BRANCH_ID" value="@item.R_ENTRY_V_BRANCH_ID"></td>
                        </tr>
                    }

                    <tr style="text-align:right">
                        <td>
                            <input type="text" value="@Model.FirstOrDefault().ROUTE_ENTREES.Machine_W" name="machine_weight" /> @*<input type="text" required="required" name="machine_weight" />*@
                            <input type="hidden" value="@Model.FirstOrDefault().ROUTE_ENTREES.ID" name="RouteEntryID" />
                            <input type="hidden" value="@ViewBag.Route_ID" name="Route_ID" />
                            <input type="hidden" value="@ViewBag.vehicle_NO " name="vehicle_id" />
                            <input type="hidden" value="@ViewBag.issueID" name="issueID" />
                        </td>
                        <td>
                            کنڈا وزن
                        </td>

                    </tr>
                    <tr style="text-align:right">
                        <td>
                           
                            <input type="submit" id="add_btn"  class="btn-success " value="Save Entries"  />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>